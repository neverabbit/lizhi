
	<p><span class="p_title"><%= link_to position.name, position_path(position) %></span><span> [<%= position.city %>]</span><span class="basic_right"><%= position.updated_at.to_date %></span></p>
	<p><%= position.salary_bottom %> - <%= position.salary_top %>万 <span class="basic_right">汇报 - <%= position.report_to %></span></p>
	<p><b><%= position.bonus %>K 入职金</b><span class="basic_right"><%= position.experience %> | <%= position.education %></span></p>
	
	<% keywords = position.keyword.split(' ') %>
	<% keywords = keywords.length < 6 ? keywords : keywords[0, 5] %>
	<p><% keywords.each do |k| %><span class='keyword'><%= k %></span><% end %></p>
